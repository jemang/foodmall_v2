.modal-dialog.modal-dialog-centered.modal-md
  .modal-content
    .modal-header.bg-modal
      h5.modal-title Product Details
      button type="button" class="close" data-dismiss="modal" aria-label="Close"
        span aria-hidden="true" &times;
    = image_views(@product.image, "560x420")
    .modal-body
      .container-modal
        = show_for(@product) do |s|
          = s.attribute :item_name
          = s.attribute :price
          = s.attribute :status
          = s.attribute :description